<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Democratic Tap On</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
          integrity="sha512-p6bINMF4vOnIkw0pObG1dZsG7quGdImrH8Lw3PYYoD4nBblXtNbyo9WAt+1Z+aogd0PKGdMq3Cf3/9I3XQ1nA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm py-3">
            <div class="container-fluid px-md-5 px-4">
                <!-- Brand Logo -->
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="~/Assets/brand-logo.png" alt="Brand Logo" class="navbar-logo img-fluid" />
                </a>

                <!-- Toggler for Mobile View -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <svg width="22" height="20" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                        <path fill="#fff"
                              d="M0 96C0 78.3 14.3 64 32 64l384 0c17.7 0 32 14.3 32 32s-14.3 32-32 32L32 128C14.3 128 0 113.7 0 96zM0 256c0-17.7 14.3-32 32-32l384 0c17.7 0 32 14.3 32 32s-14.3 32-32 32L32 288c-17.7 0-32-14.3-32-32zM448 416c0 17.7-14.3 32-32 32L32 448c-17.7 0-32-14.3-32-32s14.3-32 32-32l384 0c17.7 0 32 14.3 32 32z" />
                    </svg>
                </button>

                <!-- Navbar Links and Content -->
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <!-- Home Link -->
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold @(ViewBag.Title == "Home" ? "active" : "")"
                               href="@Url.Action("Index", "Home")">
                                Home
                            </a>
                        </li>

                        <!-- Bills Link -->
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold @(ViewBag.Title == "Bills" ? "active" : "")"
                               href="@Url.Action("Index", "UserBill")">
                                Bills
                            </a>
                        </li>

                        <!-- Representatives Link -->
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold @(ViewBag.Title == "Representatives" ? "active" : "")"
                               href="@Url.Action("Index", "Representatives")">
                                Representatives
                            </a>
                        </li>

                        <!-- About Us Link -->
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold @(ViewBag.Title == "About Us" ? "active" : "")"
                               href="@Url.Action("AboutUs", "Home")">
                                About Us
                            </a>
                        </li>

                        <!-- Contact Link -->
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold @(ViewBag.Title == "Contact" ? "active" : "")"
                               href="@Url.Action("Contact", "Home")">
                                Contact
                            </a>
                        </li>

                        <!-- Admin Dashboard -->
                        @if (User?.Identity?.IsAuthenticated ?? false && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white fw-bold @(ViewBag.Title == "Admin Dashboard" ? "active" : "")"
                                   href="@Url.Action("Admin", "UserBill")">
                                    Admin Dashboard
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Search Bar -->
                    @* <form class="d-flex me-3" role="search" action="/search" method="GET">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="query">
                        <button class="btn btn-outline-secondary" type="submit"><i class="fas fa-search"></i></button>
                    </form> *@

                    <!-- User Actions -->
                </div>
                <div class="d-lg-flex align-items-center d-none">
                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <span class="navbar-text me-3">Welcome, @User.Identity.Name!</span>
                        <a class="btn btn-outline-danger" href="@Url.Action("Logout", "Account")">Logout</a>
                    }
                    else
                    {
                        <a class="btn btn-login" href="@Url.Action("Login", "Account")">Login</a>
                        <a class="btn btn-sign-up" href="@Url.Action("SignUp", "Account")">Sign Up</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    @* <div class="container mt-4"> *@
    @RenderBody()
